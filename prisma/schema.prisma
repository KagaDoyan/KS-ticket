generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id          Int       @id @default(autoincrement())
  deleted_at  DateTime?
  created_at  DateTime  @default(now())
  email       String    @unique
  fullname    String
  password    String
  first_login Boolean   @default(false)
  phone       String?
  role        String    @default("user")
}
